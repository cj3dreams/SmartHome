<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:dashGap="0dp"
                android:dashWidth="0dp"
                android:width="2dp"
                android:color="@color/tab_color_selected" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
