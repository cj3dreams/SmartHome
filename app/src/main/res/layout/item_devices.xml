<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_alignParentStart="true"
    android:id="@+id/devicesSearchCv"
    android:layout_below="@+id/homeImgView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="25dp"
    app:cardPreventCornerOverlap="true"
    card_view:cardElevation="20"
    android:backgroundTint="@color/darkBackgroundSecondary">

    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/devicesRl"
        android:background="@drawable/dashed_lines"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="26dp"
        android:paddingHorizontal="40dp">

        <ImageView
            android:id="@+id/devicesImgView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            tools:src="@drawable/dark_wider" />

        <TextView
            android:id="@+id/devicesNameTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/devicesImgView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="19sp"
            tools:text="Bork V530" />

        <TextView
            android:id="@+id/devicesInfoTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/devicesNameTx"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/manrope_regular"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="Vacuum cleaner"
            android:textColor="@color/tab_color_unselected"
            android:textSize="13sp" />

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>